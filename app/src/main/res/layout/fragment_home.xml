<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_item"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="664dp"
        android:layout_marginTop="70dp"
        android:layout_height="797dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/bg_water">

        <com.allen.library.SuperTextView
            android:id="@+id/btn_buy"
            android:layout_width="450dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:sBackgroundDrawableRes="@drawable/btn_blue_bg_gradient"
            app:sCenterTextColor="#ffffff"
            app:sCenterTextSize="40sp"
            app:sCenterTextString="立即购买"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_select_hot"
        android:layout_width="701dp"
        android:layout_height="345dp"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="189dp"
        android:paddingBottom="30dp"
        android:visibility="visible">


        <RelativeLayout
            android:id="@+id/rl_btn_cool"
            android:layout_width="470dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_cool"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="冰 水"
                android:textColor="#ffffff"
                android:textSize="75sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="470dp"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_hot"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="熟 水"
                android:textColor="#ffffff"
                android:textSize="75sp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:src="@mipmap/icon_select"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_select_cool"
        android:layout_width="701dp"
        android:layout_height="345dp"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="189dp"
        android:paddingBottom="30dp"
        android:visibility="gone">


        <RelativeLayout
            android:id="@+id/rl_btn_hot"
            android:layout_width="470dp"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_hot"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="熟 水"
                android:textColor="#ffffff"
                android:textSize="75sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="470dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_cool"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="冰 水"
                android:textColor="#ffffff"
                android:textSize="75sp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:src="@mipmap/icon_select"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>